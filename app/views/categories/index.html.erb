<%= render 'shared/page_title', title: 'Available Categories' %>

<div aligh="center">
  <% @category.each do |ctg| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
           <li class="chef-title"><%= link_to ctg.name.capitalize, categories_path(ctg) %></li>
           <li><small><%= pluralize(ctg.movies.count, "movie") if ctg.movies %></small></li>
           <li><%= link_to "Edit this category", edit_category_path(ctg) %></li>
        </div>
      </div>
    </ul>
  <% end %>
</div>
