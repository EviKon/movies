<%= render 'shared/page_title', title: @movie.name %>
<div class="well col-md-8 col-md-offset-2" >
  <%= @movie.description %>
  <br>
  <br>
  <div>
    <% if @movie.categories %>
       <%= render @movie.categories %>
    <% end %>
  </div>
  <br>
  <div class="movie-actions">
    <%= link_to "Edit this movie", edit_movie_path(@movie),class: "btn btn-xs btn-warning" %>
    <%= link_to "Delete this movie", movie_path(@movie),
                                      method: :delete,
                                      data: { confirm: "Are you sure you want to delete this movie?" },
                                      class: "btn btn-xs btn-danger" %>
  </div>
</div>
