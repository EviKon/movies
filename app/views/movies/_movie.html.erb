<% obj.each do |movie| %>
 <div class="row">
   <div class="col-md-8 col-md-offset-2 well">
     <h4><%= link_to movie.name, movie_path(movie) %></h4>
     <p><%= truncate(movie.description, length: 150) %></p>
     <% if movie.categories %>
        <%= render movie.categories %>
    <% end %>
     <p>
       <span class="quiet">
         <small>
           Created <%= time_ago_in_words(movie.created_at) %> ago
        </small>
       </span>
     </p>
       <div class="movie-actions">
         <%= link_to "Edit this movie", edit_movie_path(movie),class: "btn btn-xs btn-warning" %>
         <%= link_to "Delete this movie", movie_path(movie),
                                           method: :delete,
                                           data: { confirm: "Are you sure you want to delete this movie?" },
                                           class: "btn btn-xs btn-danger" %>
       </div>
   </div>
 </div>
<% end %>
